                <h6><b style="font-family:'Bernard MT'" ></b>@Html.ActionLink("Create new Product","Create")</h6>
                <br />
                <div class="row">
                    @foreach (Product product in @Model)
                    {

                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100">
                                <a href="http://localhost:57665/Product/Details/1"><img class="card-img-top" src="@Url.Content(@product.Photo)"/></a>
                                <div class="card-body">
                                    <h4 class="card-title">
                                        @Html.ActionLink(product.ProductName, "Details", new { id = product.ProductId })
                                    </h4>
                                    <h5>3880 RON</h5>
                                    <p class="card-text">@product.Display</p>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                                    <small class="text-muted">@Html.ActionLink("Edit", "Details","Product",new { id = product.ProductId })</small>
                                    <small class="text-muted">@Html.ActionLink("Details", "Details", new { id = product.ProductId })</small>
                                    <small class="text-muted">@Html.ActionLink("Delete", "Create","Product", new { id = product.ProductId })</small>

                                </div>
                            </div>
                        </div>

                    }

