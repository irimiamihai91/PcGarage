    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <h1 class="my-4"><b style="color:red;font-family:'Bernard MT'">Pc</b><b style="font-family:'Bernard MT'">Garage</b></h1>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <td>
                                    <a href="http://localhost:57665/Product?categoryId=1">Laptop</a>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <a href="http://localhost:57665/Product?categoryId=2">Laptop Gaming</a>
                                </td>
                            </tr>
                            <tr>
                                <td>
